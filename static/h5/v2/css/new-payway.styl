$cl-red=#FF687A;

ul
  list-style none

ul.ways
  margin 25px 3.5% 0
  li
    width 47.5%
    height 50px
    line-height 50px
    margin-bottom 10px
    float left
    box-sizing border-box
    border 1px solid #E0DFDF
    display flex
    &.active
      border 1px solid $cl-red
    i
      flex 3
      height 100%
    span
      flex 4
      padding-left 5%
      text-overflow: ellipsis
      overflow: hidden
      white-space: nowrap
    &:nth-child(1)
      i
        background url("../images/yhks.png") no-repeat center
        background-size auto 30px
    &:nth-child(2)
      i
        background url("../images/yl.png") no-repeat center
        background-size auto 30px
    &:nth-child(3)
      i
        background url("../images/wx.png") no-repeat center
        background-size auto 35px
    &:nth-child(4)
      i
        background url("../images/zfb.png") no-repeat center
        background-size auto 35px
    &:nth-child(5)
      i
        background url("../images/qq.png") no-repeat center
        background-size auto 35px
    &:nth-child(6)
      i
        background url("../images/quick.png") no-repeat center
        background-size 50px auto
  li:nth-child(2n+1)
    margin-right 5%

div.sep
  border-top 8px solid #E6E6E5

div.bank
  display none
  margin-top 10px
  position relative
  span.title
    position absolute
    height 40px
    line-height 40px
    width 25%
    padding-left 5%
  select
    margin-left 25%
    width 72%
    height 40px
    padding-left 5%
    font-size 16px
    color #999899
    outline none
    option
      text-align center
      padding 0
      outline none

div.active
  display block
div.money
  position relative
  margin 10px 0
  height 40px
  span.title
    position absolute
    display inline-block
    height 40px
    width 25%
    line-height 40px
    padding-left 5%
    box-sizing border-box
  input
    position absolute
    box-sizing border-box
    left 25%
    height 40px
    width 72%
    line-height 40px
    padding-left 6%
    background #E6E6E5
    outline none
    border none

ul.account
  display flex
  margin 0 1%
  li
    flex 1
    border 1px solid #D1D1D1
    text-align center
    color #323333
    margin 0 1%
    height 30px
    line-height 30px

div.confirm, div.confirmSecond, div.scanSecond
  text-align center
  height 45px
  line-height 45px
  border-radius 5px
  color #fff
  font-size 20px
  width 90%
  box-sizing border-box
  margin 20px 5% 0
  background $cl-red

p.tips
  margin 40px 5% 0
  color #898989
  font-size 12px
  line-height 20px

div.confirmInfo
  display none
  h1
    font-size 14px
    line-height 20px
    padding 0 5%
    span
      color $cl-red
  table
    width 90%
    margin-left 5%
    border-collapse:collapse;
    tr
      height 30px
      td.label
        width 25%
        text-align center
      td.value
        padding 0 5%
    tr:nth-child(2)
      td
        span
          padding 0 5px
          background $cl-red
          color #fff
          border-radius 5px
  table,tr,td
    border 1px solid #A9A8A8

div.scanInfo
  display none
  h1
    font-size 14px
    padding 0 5%
    margin-bottom 5px
    //border-left 3px solid $cl-red
  p
    color $cl-red
    padding 0 5%
  ul
    width 60%;
    min-width 200px;
    display flex
    border 1px solid #E0DFDF;
    border-radius 10px
    margin 0 auto
    li
      flex 1
      height 120px
      display flex
      flex-direction column
      justify-content center
      align-items center
    li.qrCode
      div
        width 80%
        img
          width 100%
    li.info
      text-align center
      img
        width 50px
      p
        color #000
        padding 0
        margin 5px 0
      span
        background $cl-red
        color #fff
        padding 5px 10px
        border-radius 5px

  h3
    font-size 14px
    line-height 20px
    padding 5px 5% 0
    span
      color $cl-red
  table
    width 90%
    margin 10px 0 0 5%
    border-collapse:collapse;
    tr
      height 30px
      td.label
        width 25%
        text-align center
      td.value
        padding-left 5%
    tr:nth-child(2)
      td
        span
          padding 0 5px
          background $cl-red
          color #fff
          border-radius 5px
  table,tr,td
    border 1px solid #A9A8A8


.clear:after
  content ''
  display block
  clear both
  overflow hidden